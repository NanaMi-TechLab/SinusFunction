<Window x:Class="sinus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sinus"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1700">
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Amplitude" VerticalAlignment="Center"/>
            <Slider Name="AmplitudeSlider" Minimum="0" Maximum="10" Value="1" Width="200" Margin="5,0"/>
            <TextBox Name="AmplitudeBox" Width="50" Text="1" Margin="5"/>

            <TextBlock Text="Periode" VerticalAlignment="Center"/>
            <Slider Name="PeriodeSlider" Minimum="0" Maximum="10" Value="1" Width="200" Margin="5,0"/>
            <TextBox Name="PeriodeBox" Width="50" Text="1" Margin="5"/>
        </StackPanel>
        <Canvas Name="DrawingArea" Background="White"></Canvas>
    </DockPanel>
</Window>
